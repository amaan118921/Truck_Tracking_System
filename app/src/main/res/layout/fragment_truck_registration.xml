<?xml version="1.0" encoding="utf-8"?>


<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.TruckRegistration">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:id="@+id/cL1"
            android:layout_height="match_parent"
            >


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Trucks Registration"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/spartanmedium500"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/tv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="35dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="25dp"
                android:id="@+id/ll"
                app:layout_constraintTop_toBottomOf="@id/tv"
                app:layout_constraintStart_toStartOf="parent">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:hint="Name"
                    android:id="@+id/driverName"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:fontFamily="@font/spartanreg" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:hint="email.."
                    android:textSize="15sp"
                    android:id="@+id/drvierEmail"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:layout_marginTop="15dp"
                    android:fontFamily="@font/spartanreg" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:inputType="phone"
                    android:maxLength="10"
                    android:hint="Phone.."
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:id="@+id/driverPhone"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:fontFamily="@font/spartanreg" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:hint="Truck type.."
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:id="@+id/truckType"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:fontFamily="@font/spartanreg" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:hint="Truck Number.."
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:id="@+id/truckNumber"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:fontFamily="@font/spartanreg" />


                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:hint="Password"
                    android:layout_marginTop="15dp"
                    android:textSize="15sp"
                    android:id="@+id/password"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:fontFamily="@font/spartanreg" />


                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="no"
                    android:layout_marginTop="15dp"
                    android:src="@drawable/ic_baseline_done_24"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log In for Trucks"
                    android:id="@+id/truck_login"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>






        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/cL2">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="User Registration"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:fontFamily="@font/spartanmedium500"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:id="@+id/user_tv"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="35dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_margin="25dp"
                app:layout_constraintTop_toBottomOf="@id/user_tv"
                app:layout_constraintStart_toStartOf="parent">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:hint="Name"
                    android:id="@+id/user_name"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:fontFamily="@font/spartanreg" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:hint="email.."
                    android:textSize="15sp"
                    android:id="@+id/user_email"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:layout_marginTop="25dp"
                    android:fontFamily="@font/spartanreg" />

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@null"
                    android:hint="password.."
                    android:id="@+id/user_phone"
                    android:layout_marginTop="25dp"
                    android:textSize="15sp"
                    android:textColor="@color/black"
                    android:padding="8dp"
                    android:fontFamily="@font/spartanreg" />

                <com.google.android.material.floatingactionbutton.FloatingActionButton
                    android:id="@+id/user_done"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:importantForAccessibility="no"
                    android:layout_marginTop="25dp"
                    android:src="@drawable/ic_baseline_chevron_right_24"
                    tools:ignore="RtlHardcoded" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Log In for Users"
                    android:id="@+id/user_login"
                    android:layout_marginTop="25dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    />
            </LinearLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>





    </RelativeLayout>
</layout>