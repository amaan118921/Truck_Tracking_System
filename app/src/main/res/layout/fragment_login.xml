<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".fragments.LoginFragment">

        <TextView
            android:id="@+id/gen_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:fontFamily="@font/spartanmedium500"
            android:text="Login For Truck"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <TextView
            android:id="@+id/gen_text_users"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:visibility="gone"
            android:fontFamily="@font/spartanmedium500"
            android:text="Login For Users"
            android:textColor="@color/black"
            android:textSize="20sp" />


        <com.google.android.material.card.MaterialCardView
            android:layout_width="275dp"
            android:layout_below="@id/gen_text"
            android:layout_height="55dp"
            android:id="@+id/m1"
            app:strokeColor="@color/teal_200"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:strokeWidth="0.5dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/email_edt"
                android:textSize="14sp"
                android:fontFamily="@font/spartanmedium500"
                android:textColor="@color/black"
                android:background="@null"
                android:layout_gravity="center"
                android:hint="email.."
                android:padding="4dp" />

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.card.MaterialCardView
            android:layout_width="275dp"
            android:layout_below="@id/m1"
            android:layout_height="55dp"
            android:id="@+id/m2"
            app:strokeColor="@color/teal_200"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            app:strokeWidth="0.5dp">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/password_edt"
                android:textSize="14sp"
                android:fontFamily="@font/spartanmedium500"
                android:textColor="@color/black"
                android:background="@null"
                android:layout_gravity="center"
                android:hint="password"
                android:padding="4dp" />

        </com.google.android.material.card.MaterialCardView>


        <com.google.android.material.floatingactionbutton.FloatingActionButton
            android:id="@+id/login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/m2"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="100dp"
            android:importantForAccessibility="no"
            android:src="@drawable/ic_baseline_done_24"
            tools:ignore="RtlHardcoded" />


    </RelativeLayout>
</layout>